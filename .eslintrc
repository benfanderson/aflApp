{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "rules": {
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "import/prefer-default-export": "off",
        "max-len": [1, 150, 2, {"ignoreComments": true}],
        "no-param-reassign": ["error", { "props": false }]
    }
}